<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="View.CadastroProdutoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="35dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="left"
            android:src="@drawable/bt_voltar_roxo"
            android:backgroundTint="@color/white"
            android:id="@+id/btVoltar"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Adicionar Produtos"
            android:fontFamily="@font/rubik_medium"
            android:textColor="@color/purple"
            android:textSize="22sp"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Nome do Produto"
        android:textColor="@color/purple"
        android:textSize="12sp"
        android:fontFamily="@font/rubik_light"
        />
    
    <EditText
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:background="@drawable/borda_botao"
        android:layout_marginLeft="10dp"
        android:paddingLeft="20dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/edNomeProduto"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Custo Produto"
        android:textColor="@color/purple"
        android:textSize="12sp"
        android:fontFamily="@font/rubik_light"
        />

    <EditText
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:background="@drawable/borda_botao"
        android:layout_marginLeft="10dp"
        android:inputType="numberDecimal"
        android:paddingLeft="20dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/edCustoProduto"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Valor de Venda"
        android:textColor="@color/purple"
        android:textSize="12sp"
        android:fontFamily="@font/rubik_light"
        />

    <EditText
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:background="@drawable/borda_botao"
        android:layout_marginLeft="10dp"
        android:paddingLeft="20dp"
        android:layout_marginBottom="40dp"
        android:inputType="numberDecimal"
        android:id="@+id/edValorVenda"/>

    <Button
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/purple"
        android:text="Cadastrar"
        android:fontFamily="@font/rubik_medium"
        android:layout_gravity="center"
        android:id="@+id/btCadastrarProduto"/>
</LinearLayout>